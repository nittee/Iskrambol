#:kivy 2.3.0

<MainPage>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Iskrambol Game'
            size_hint_y: 0.4
            pos_hint: {'center': True}

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.5

            Button:
                text: 'Play'
            Button:
                text: 'Modes'
            Button:
                text: 'About'
            Button:
                text: 'Exit'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            
            Button:
                text: 'Setting'
            Button:
                text: 'Sound'
            Button:
                text: 'Account'
